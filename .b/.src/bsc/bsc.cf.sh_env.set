## .bsc.cf.sh_env.set




_BPK_VERSION="$(basename $(ls -1 ${HOME}/.b/..__*__) | sed -e 's/\.\.__\(.*\)__/\1/g')";
export _BPK_VERSION

PATH_BEEE=.:${HOME}/.b/x/sys/sh:${HOME}/.b/x/sys/bdx:/x/.bdx
for _i in $(ls -1d ${HOME}/.b/x/sys/bin/x.*);
do
	PATH_BEEE=${PATH_BEEE}:${_i}
done
PATH_BEEE=${PATH_BEEE}:${HOME}/x/bin
PATH_SYS=/sbin:/bin:/lib:/usr/sbin:/usr/bin:/usr/lib:/usr/libexec:/usr/local/sbin:/usr/local/bin:/usr/local/lib:/usr/local/libexec
if [ "X$(echo $PATH | grep PATH_BEEE > /dev/null; echo $?)" != "X0" ]; then
	PATH=${PATH_BEEE}:${PATH_SYS}:${PATH}
	export PATH
fi

LD_LIBRARY_PATH=/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu:/lib:/usr/lib:/usr/local/lib:/x/sys/lib:/x/sys/local/lib:.
export LD_LIBRARY_PATH

EDITOR=vi
export EDITOR

#TERM=vt100
