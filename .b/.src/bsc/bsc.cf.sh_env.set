export TERM

PS1='\u@${HOSTNAME}:[\W] \$ '
export PS1

LANG=C
export LANG

LANGUAGE=$LANG
export LANGUAGE

LC_ALL=$LANG
export LC_ALL

PYTHONPATH=.:${HOME}/.b/.src/bpy:${HOME}/.b/x/path/usr.lib.python:/usr/lib/python:${PYTHONPATH}
export PYTHONPATH

TERM="xterm-256color"
