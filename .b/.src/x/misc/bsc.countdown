#!/bin/sh
## 20121016_010341




_tstamp=$(tstamp);




## functions
countdown_with_sleep()
{
	if [ "X$_count" = "X" ]; then
		read -p "time to sleep (in second): " _count;
	fi
	echo -n "count down: ";
	while [ $_count -gt 0 ]; do
		printf "%08d" $_count;
		_count=$(echo "$_count - 1" | bc);
		sleep 1;
		printf "\b\b\b\b\b\b\b\b";
	done
	echo "";
}




if [ "X$1" = "X" ]; then
	_count=""; countdown_with_sleep;
else
	_count="$1"; countdown_with_sleep;
fi




